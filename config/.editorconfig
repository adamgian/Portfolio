##### EditorConfig (editorconfig.org)

# Should be located at root so that a supported editor
# will adhere to the coding styles project wide rather than
# just within the config directory. This file serves more as a
# guideline for me and I also don't want to mess up my
# current feng shui.

root = true

[*]
charset = utf-8
indent_size = 4
indent_style = space
insert_final_newline = false
trim_trailing_whitespace = true