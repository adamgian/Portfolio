{
    "name": "portfolio",
    "version": "0.0.28",
    "author": {
        "name": "Adam Gian",
        "email": "contact@adamgian.com",
        "url": "adamgian.com"
    },
    "license": "ISC",
    "private": true,
    "scripts": {
        "clean": "rimraf dist/",
        "start": "npm run dev",
        "build": "npm run clean && npm run build:webpack && npm run build:jekyll && npm run build:html",
        "dev": "npm run clean && concurrently 'npm run serve:webpack' 'npm run serve:jekyll'",
        "build:html": "html-minifier --input-dir 'dist/' --output-dir 'dist/' --file-ext 'html' --remove-comments --collapse-whitespace --minify-js",
        "build:jekyll": "cross-env JEKYLL_ENV=production jekyll build --config config/_config.yml",
        "build:webpack": "cross-env NODE_ENV=production webpack --config config/webpack.config.js",
        "serve:jekyll": "cross-env JEKYLL_ENV=development jekyll serve --config config/_config.yml,config/_config-dev.yml --watch",
        "serve:webpack": "cross-env NODE_ENV=development webpack --config config/webpack.config.js --watch",
        "test": "eslint -c config/.eslintrc src/assets/javascript --ignore-path config/.eslintignore"
    },
    "dependencies": {
        "core-js": "^2.6.5"
    },
    "devDependencies": {
        "@babel/core": "^7.4.0",
        "@babel/preset-env": "^7.4.1",
        "autoprefixer": "^7.2.6",
        "babel-loader": "^8.0.5",
        "concurrently": "^3.6.1",
        "cross-env": "^5.2.0",
        "css-loader": "^0.28.11",
        "eslint": "^5.15.3",
        "html-minifier": "^3.5.21",
        "mini-css-extract-plugin": "^0.5.0",
        "node-sass": "^4.11.0",
        "path": "^0.12.7",
        "postcss-loader": "^2.1.6",
        "postcss-preset-env": "^6.6.0",
        "rimraf": "^2.6.3",
        "sass-loader": "^6.0.7",
        "style-loader": "^0.18.2",
        "webpack": "^4.29.6",
        "webpack-cli": "^3.3.0"
    },
    "engines": {
        "node": ">=10.15.0",
        "npm": ">=6.7.0"
    },
    "browserslist": [
        "> 1%",
        "last 2 versions"
    ]
}
